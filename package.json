{
  "name": "whatpm-server",
  "version": "1.0.0",
  "description": "Express backend for what.pm",
  "author": "Nienke Dekker <nienkedekker@gmail.com>",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development nodemon --exec babel-node ./src/bin/www.js",
    "start": "NODE_ENV=production npm-run-all clean build server:prod",
    "test": "mocha --require @babel/register 'src/**/**test.js'",
    "server:prod": "node ./dist/bin/www",
    "clean": "rimraf dist",
    "build": "babel ./src --out-dir dist"
  },
  "dependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.7",
    "@babel/node": "^7.16.8",
    "@babel/polyfill": "^7.7.0",
    "@babel/preset-env": "^7.16.8",
    "@babel/register": "^7.16.9",
    "@types/chai": "^4.3.0",
    "async": "^3.2.3",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.2.3",
    "babel-polyfill": "^6.26.0",
    "bcrypt-nodejs": "^0.0.3",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "debug": "^4.3.3",
    "dotenv": "^11.0.0",
    "express": "^4.17.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.1.6",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "rimraf": "^3.0.2",
    "sinon": "^12.0.1"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "mocha": "^9.1.3",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1"
  },
  "engines": {
    "node": "~14.17.3"
  }
}
