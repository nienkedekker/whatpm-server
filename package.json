{
  "name": "whatpm-server",
  "version": "1.0.0",
  "description": "Express backend for what.pm",
  "author": "Nienke Dekker <nienkedekker@gmail.com>",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development nodemon --exec babel-node ./src/bin/www.js",
    "start": "NODE_ENV=production npm-run-all clean build server:prod",
    "test": "mocha --require @babel/register 'src/**/**test.js'",
    "server:prod": "node ./dist/bin/www",
    "clean": "rimraf dist",
    "build": "babel ./src --out-dir dist"
  },
  "dependencies": {
    "@babel/node": "^7.7.0",
    "@babel/polyfill": "^7.7.0",
    "@types/chai": "^4.2.4",
    "async": "^2.6.1",
    "babel-polyfill": "^6.26.0",
    "bcrypt-nodejs": "^0.0.3",
    "bluebird": "^3.5.2",
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "debug": "^4.1.1",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.3.0",
    "mongoose": ">=5.7.5",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "rimraf": "^3.0.0",
    "sinon": "^7.5.0",
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/register": "^7.7.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "mocha": "^6.2.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "engines": {
    "node": "~14.17.3"
  }
}
