{
  "name": "whatpm-server",
  "version": "1.0.0",
  "description": "Express backend for what.pm",
  "author": "Nienke Dekker <nienkedekker@gmail.com>",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development nodemon --exec babel-node ./src/bin/www.js",
    "start": "NODE_ENV=production npm-run-all clean build server:prod",
    "test": "mocha --require @babel/register 'src/**/**test.js'",
    "server:prod": "node ./dist/bin/www",
    "clean": "rimraf dist",
    "build": "babel ./src --out-dir dist"
  },
  "dependencies": {
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.7",
    "@babel/node": "^7.16.8",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.16.8",
    "@babel/register": "^7.16.9",
    "@babel/runtime": "^7.17.9",
    "@types/chai": "^4.3.0",
    "async": "^3.2.3",
    "babel-polyfill": "^6.26.0",
    "bcrypt": "^5.0.1",
    "bluebird": "^3.7.2",
    "body-parser": "^1.20.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.3.1",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "eslint": "^8.14.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "mocha": "^9.1.3",
    "prettier": "2.6.2"
  }
}
